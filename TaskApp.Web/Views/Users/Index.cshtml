@model IEnumerable<TaskApp.Data.Models.User>

@{
    ViewData["Title"] = "Usuários";
}

<div class="container py-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <div class="row mb-4">
        <div class="col-md-6">
            <a asp-controller="Account" asp-action="Register" class="btn btn-success">
                <i class="bi bi-person-plus"></i> Registrar Novo Usuário
            </a>
        </div>
        <div class="col-md-6">
            <form asp-action="Index" method="get" class="d-flex">
                <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control me-2" placeholder="Pesquisar usuários...">
                <button type="submit" class="btn btn-primary me-2">Pesquisar</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Limpar</a>
            </form>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <p>Nenhum usuário encontrado. Clique no botão acima para adicionar um novo usuário.</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-primary">
                    <tr>
                        <th>Nome de Usuário</th>
                        <th>Nome Completo</th>
                        <th>E-mail</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.UserName</td>
                            <td>@user.FullName</td>
                            <td>@user.Email</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-info btn-sm">
                                    <i class="bi bi-info-circle"></i> Detalhes
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div> 