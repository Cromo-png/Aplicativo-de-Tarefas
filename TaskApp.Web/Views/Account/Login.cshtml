@model TaskApp.Web.Models.LoginViewModel

@{
    ViewData["Title"] = "Entrar";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card my-5">
            <div class="card-header bg-primary text-white">
                <h2 class="text-center">@ViewData["Title"]</h2>
            </div>
            <div class="card-body p-4">
                <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="mb-3">
                        <label asp-for="Username" class="form-label"></label>
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="mb-3 form-check">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label"></label>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Entrar</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="alert alert-info text-center">
            <p><strong>Login Padrão do Administrador:</strong></p>
            <p>Usuário: admin</p>
            <p>Senha: Admin@ICAD!</p>
        </div>
        <div class="text-center mt-3">
            <p>
                Não tem uma conta? <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Registre-se como novo usuário</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
} 